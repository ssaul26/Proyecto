<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Mensaje -->
    <TextView
        android:id="@+id/textViewMensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Procesaremos tu solicitud con los siguientes datos:"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- Cédula -->
    <TextView
        android:id="@+id/textViewCedula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cédula: "
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <!-- Estudios -->
    <TextView
        android:id="@+id/textViewEstudios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estudios: "
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <!-- Especialidad -->
    <TextView
        android:id="@+id/textViewEspecialidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Especialidad: "
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <!-- Ubicación -->
    <TextView
        android:id="@+id/textViewUbicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ubicación: "
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- Botón Cerrar sesión -->
    <Button
        android:id="@+id/btnCerrarSesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar sesión"
        android:textSize="16sp"
        android:backgroundTint="@color/azulbotones"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp" />

</LinearLayout>
